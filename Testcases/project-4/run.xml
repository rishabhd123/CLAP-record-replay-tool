<project name="Testcases.project-4" default="jar">

	<!-- Clean the project directories before creating JAR -->
	<target name="clean">

		<ant antfile="build.xml" target="clean">
		</ant>

		<delete dir="sootBin" />
		<delete dir="output" />
		<delete dir="processed-output" />
		<delete file="project-4.jar" />

	</target>

	<target name="jar">

		<!-- Compile the testcases -->
		<ant antfile="build.xml">
		</ant>

		<!-- Create JAR file of the testcases -->
		<jar destfile="project-4.jar">
			<fileset dir="bin" />
			<fileset dir="src" includes="**/*.java" />
		</jar>

	</target>

</project>